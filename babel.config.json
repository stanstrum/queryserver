{
  "presets": [
    "@babel/preset-env",
    "@babel/preset-typescript",
  ],
  "plugins": [
    [
      "@babel/plugin-proposal-numeric-separator"
    ],
    [
      "babel-plugin-root-import",
      {
        "rootPathSuffix": "./src",
        "rootPathPrefix": "@/"
      }
    ]
  ],
  "ignore": [
    "**/*.test.ts",
    "**/*.json"
  ]
}
